
/*回到顶部*/
$(window).scroll(function () {
    //获取窗口的滚动条的垂直位置
    var s = $(window).scrollTop();
    //当窗口的滚动条的垂直位置大于页面的最小高度时，让返回顶部元素渐现，否则渐隐
    if (s > 400) {
        $(".goTop").fadeIn(200);
    } else {
        $(".goTop").fadeOut(300);
    };
});
$('.goTop').click(function () {

    $('body,html').stop().animate({ scrollTop: 0 });

    return false;

});